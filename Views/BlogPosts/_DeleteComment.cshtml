@using WebAppPortfolio.Models
@model WebAppPortfolio.Models.Comment

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="bs-docs-section">
        <h4 id="shortcodes" class="page-header">
            <i class="fa fa-eraser"></i> Delete comment by "@Html.DisplayFor(model => model.Username)"
        </h4>
    </div>    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePosted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Edited)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edited)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <br/>
            <br />
            <input type="button" class="btn btn-primary" value="Back to Post" onclick="location.href='@Url.Action("BlogPostDetails", "BlogPosts", new { slug = Model.Post.Slug})'" />

        </div>
    }
</div>
