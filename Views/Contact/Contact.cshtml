@{
    ViewBag.Title = "Contact";
}
@section css {
    <!--GOOGLE MAPS CSS-->
    <style>
        #map {
            width: 100%;
            height: 200px;
        }
    </style>
}

<div class="bs-docs-section">
    <h1 id="shortcodes" class="page-header"><i class="fa fa-envelope"></i> Contact Me </h1>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="office_address col-sm-4 col-md-4">
                <div class="team_member">
                    <img src="~/Content/images/profile_portraits/CF_LinkedIn (150x150).jpg" width="150" height="150" style="border:4px solid" alt="profile picture">
                    <h5 style="color:#333333">Elliot Ewert</h5>
                    <small style="color:#333333"><strong>C# .NET Developer + Desginer</strong></small><br><br>
                    <div class="team_social">
                        <a href="https://www.linkedin.com/in/elliotewert" target="_blank"><i class="fa fa-linkedin-square"></i></a>
                        <a href="http://stackoverflow.com/users/4530000/kanapolis" target="_blank"><i class="fa fa-stack-overflow"></i></a>
                        <a href="https://github.com/ewerte89"><i class="fa fa-github-square" target="_blank"></i></a>
                    </div>
                    <address style="color:#333333">
                        <strong></strong><br>
                        #5 Shields Rd<br>
                        Kernersville, NC 27284<br>
                        <abbr title="Phone">P:</abbr> <a href="tel:6178210388">(617) 821.0388</a><br />
                        <abbr title="Email">E:</abbr> <a href="mailto:elliot.ewert@gmail.com">elliot.ewert@gmail.com</a>
                    </address>
                </div>
            </div>

            <div id="messageConfirm" class="contact_form col-sm-8 col-md-8">
                <form name="contact_form" id="contact_form" method="post" action="@Url.Action("Contact")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="bs-docs-section">
                        <h1 class="page-header"> @ViewBag.MessageSent </h1>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <label>Name</label>
                            <input name="Name" id="name" class="form-control" type="text" value="">
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <label>E-mail</label>
                            <input name="Email" id="email" class="form-control" type="text" value="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <label>Subject</label>
                            <input name="Subject" id="subject" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <label>Message</label>
                            <textarea name="Message" id="message" rows="8" class="form-control"></textarea>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <br>
                            <input type="submit" class="btn btn-primary" value="Submit Message" />
                            <span id="notice" class="alert alert-warning alert-dismissable hidden" style="margin-left:20px;"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<section class="panel_wrapper">
    <div class="container">
        <h1 id="shortcodes" class="page-header"><i class="fa fa-briefcase"></i> I currently work in the Tar Heel state...</h1>
        <div id="map" alt="~/Content/Images/View_Clipart/US_State_north_carolina.png"></div>
        <h1 id="shortcodes" class="page-header" style="text-align:right"><i class="fa fa-hand-o-up"></i> ...Where the bbq is finger-lickin' good.</h1>
    </div>
</section>
@section scripts
{
    <!--CONTACT FORM JS-->
    <script type="text/javascript" src="~/Scripts/ReStartTemplate/contact_form.js"></script>

    <!--GOOGLE MAPS API-->
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="~/Scripts/googlemapsapi.js"></script>>
}